@using FinalProject.DB.Entities
@model List<Weapon>
@{
    ViewBag.Title = "Преглед на оръжията";
}
<div class="row">
    <h4>Преглед на оръжията</h4>
    <hr />
    <div class="table-actions">
        @Html.ActionLink("+ Нов", "Edit", null, new { @class = "btn btn-default" })
    </div>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Производител</th>
                <th>Модел</th>
                <th>Калибър</th>
                <th>Тегло</th>
                <th>Дължина на цевта</th>
                <th>Цена</th>
                <th>Операции</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="5">
                        Няма намерени резултати!
                    </td>
                </tr>
            }
            else
            {
                for (int i = 0; i < Model.Count; i++)
                {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].Manafacturer</td>
                    <td>@Model[i].Model</td>
                    <td>@Model[i].Caliber</td>
                    <td>@Model[i].BarrelLength</td>
                    <td>@Model[i].Price</td>
                    <td>
                        @Html.ActionLink("Преглед", "Details", "Weapons", new { Id = Model[i].Id }, new { @class = "btn btn-xs btn-default btn-primary" })
                        @Html.ActionLink("Редакция", "Edit", "Weapons", new { Id = Model[i].Id }, new { @class = "btn btn-xs btn-default btn-success" })
                        @Html.ActionLink("Изтриване", "Delete", "Weapons", new { Id = Model[i].Id }, new { @class = "btn btn-xs btn-default btn-danger" })
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>